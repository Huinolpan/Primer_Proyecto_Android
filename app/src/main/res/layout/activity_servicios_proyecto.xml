<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".servicios_proyecto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="364dp"
        android:layout_height="347dp"
        android:layout_marginTop="52dp"
        app:cardCornerRadius="25dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="337dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="314dp"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:text="ReciclAPP "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="322dp"
                android:layout_height="106dp"
                android:layout_marginTop="180dp"
                android:text="Plataforma que nace por la necesidad de generar un cambio de habitos en nuestra sociedad a través del reciclaje de los residuoa que generamos a diario. Acá encontrarás información de puntos de reciclaje,consejos practicos para que el proceso de reciclaje sea el correcto y también datos de servicios de retiro de residuos domiciliario. "
                android:textColor="#FF5722"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <VideoView
                android:id="@+id/vv"
                android:layout_width="314dp"
                android:layout_height="152dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/medioambiente"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/planeta"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/botella"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/reciclar"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="373dp"
        android:layout_height="186dp"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <TableLayout
                android:layout_width="345dp"
                android:layout_height="146dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="178dp"
                        android:layout_height="70dp"
                        android:backgroundTint="#2ED057"
                        android:onClick="Punto"
                        android:text="Puntos de reciclaje"
                        android:textColor="#1C1B1B"
                        app:cornerRadius="25dp"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="171dp"
                        android:layout_height="70dp"
                        android:backgroundTint="#2ED057"
                        android:onClick="Reciclaje"
                        android:text="Productos reciclados"
                        android:textColor="#131212"
                        app:cornerRadius="25dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <Button
                        android:id="@+id/button13"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="166dp"
                        android:layout_height="67dp"
                        android:backgroundTint="#2ED057"
                        android:onClick="Tips"
                        android:text="Tips para reciclaje"
                        android:textColor="#1F1F20"
                        app:cornerRadius="25dp"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/button12"
                        android:layout_width="168dp"
                        android:layout_height="67dp"
                        android:backgroundTint="#2ED057"
                        android:onClick="Retiro"
                        android:text="Retiro a domicilio"
                        android:textColor="#0C0B0B"
                        app:cornerRadius="25dp" />
                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>